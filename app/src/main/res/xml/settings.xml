    <PreferenceCategory app:title="@string/pref_compiler">

        <ListPreference
            app:key="@string/key_java_version"
            app:title="@string/pref_java_version"
            app:defaultValue="7"
            app:entries="@array/java_versions"
            app:entryValues="@array/java_versions" />

        <EditTextPreference
            app:key="@string/key_program_arguments"
            app:title="@string/pref_program_arguments" />

        <SwitchPreferenceCompat
            app:key="@string/key_fastjarfs"
            app:title="@string/pref_fast_jar_fs"
            app:defaultValue="true"
            app:summary="@string/pref_fast_jar_fs_desc" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/pref_about">

        <Preference
            app:key="@string/key_app_version"
            app:title="@string/pref_app_version"
            app:summary="@string/app_version" />

        <Preference
            app:key="@string/key_discord"
            app:title="@string/pref_discord"
            app:summary="@string/pref_discord_desc" />

        <Preference
            app:key="@string/key_github"
            app:title="@string/pref_github"
            app:summary="@string/pref_github_desc" />

    </PreferenceCategory>

